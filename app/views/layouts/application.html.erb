<!DOCTYPE html>
<html>
<head>
  <title>DeviantArt Dir Watcher</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body id='<%= controller_name.dasherize %>' data-action='<%= action_name.dasherize %>'>

<div id='wrapper'>
  <%= render 'header' %>
  <%= render 'notifications' %>

  <div id='main-content'>
    <%= yield %>

    <div id='push'></div>
  </div>
</div>

<hr class='clear-both'>

<%= render 'footer' %>

</body>
</html>
