<div id='notifications' class='col-md-3'>
  <%- if flash[:notice].present? %>
    <div class='alert alert-info notification'>
      <button type="button" class="close" data-dismiss="alert"> <%= t 'common.x' %> </button>
      <h4> <%= t 'common.heads_up!' %> </h4>

      <%= notice %>
    </div>
  <% end %>

  <%- if flash[:alert].present? %>
    <div class='alert alert-danger notification'>
      <button type="button" class="close" data-dismiss="alert"> <%= t 'common.x' %> </button>
      <h4> <%= t 'common.warning!' %> </h4>

      <%= alert %>
    </div>
  <% end %>


  <div id='alert-template' class='hidden alert notification'>
  </div>
</div>
