<%= page_header t('.header', notifier: @notifier.path) %>

<table id='events-table' class='table table-condensed table-striped table-hover' data-notifier-id='<%= @notifier.id %>'>
  <thead>
    <th> <%= t '.event.file_name' %> </th>
    <th> <%= t '.event.file_mtime' %> </th>
    <th> <%= t '.event.file_path' %> </th>
    <th> <%= t '.event.file_ownership' %> </th>
  </thead>

  <tbody id='events'>
    <%= render @notifier.events %>
  </tbody>
</table>
